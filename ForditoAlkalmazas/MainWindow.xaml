<Window x:Class="ForditoAlkalmazas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForditoAlkalmazas"
        mc:Ignorable="d"
         Background="#f5f5f5"
        Title="Fordító alkalmazás" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Szövegfordító és Blob feltöltő" Grid.ColumnSpan="2"
                   FontSize="22" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,20"/>
        <!-- File kiválasztás-->
        <TextBox x:Name="FilePathTextBox" Grid.Row="1" Grid.Column="0"
                 Height="30" IsReadOnly="True" Margin="0,0,10,0" 
                 VerticalContentAlignment="Center" Padding="5" Background="White" BorderBrush="#ccc"/>
        <Button Content="Fájl kiválasztása" Grid.Row="1" Grid.Column="1" Width="120" Height="30"
                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand" Click="SelectFile_Click"/>
        <!-- Nyelv kiválasztás -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,20,0,10" HorizontalAlignment="Left">
            <TextBlock Text="Célnyelv kiválasztása:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="LanguageComboBox" Width="120" Height="25">
                <ComboBoxItem Content="Angol" Tag="en" IsSelected="True"/>
                <ComboBoxItem Content="Magyar" Tag="hu"/>
                <ComboBoxItem Content="Német" Tag="de"/>
                <ComboBoxItem Content="Francia" Tag="fr"/>
                <ComboBoxItem Content="Orosz" Tag="ru"/>
                <ComboBoxItem Content="Kínai" Tag="zh"/>
                <ComboBoxItem Content="Koreai" Tag="ko"/>
            </ComboBox>
        </StackPanel>
        <!-- Feltöltés -->
        <Button Content="Fordítás és feltöltés" Grid.Row="3" Grid.ColumnSpan="2" Height="35" Margin="0,10,0,0"
                Background="#2196F3" Foreground="White" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand" Click="TranslateUpload_Click"/>
        <TextBlock x:Name="StatusTextBlock" Grid.Row="4" Grid.ColumnSpan="2" Margin="0,60,0,0" TextWrapping="Wrap" Foreground="#555"/>
    </Grid>
</Window>
